{
  "version": 6,
  "configurePresets": [
    {
      "name": "host-debug",
      "displayName": "Host (Debug, tests ON)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-host",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_EMBEDDED": "OFF",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "stm32-release",
      "displayName": "STM32 (Release, tests OFF)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-stm32",
      "cacheVariables": {
        "BUILD_EMBEDDED": "ON",
        "BUILD_TESTING": "OFF"
      }
    }
  ],
  "testPresets": [
    {
      "name": "test-host",
      "configurePreset": "host-debug",
      "output": { "outputOnFailure": true }
    }
  ]
}
